{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom","es5","es6", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules","./tests/"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}